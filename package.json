{
  "name": "rest-api-and-payment-integration",
  "version": "1.0.0",
  "description": "Comprehensive rest api and payment integration API built with Node.js, Express, and Prisma.",
  "main": "./dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc && node copy-templates.js",
    "postinstall": "npm run db:generate",
    "build:render": "npm install --include=dev && npm db:generate && npm run build",
    "dev": "npx tsx watch ./src/index.ts",
    "worker": "npx tsx src/workers/outboxWorker.ts",
    "worker:dev": "npx tsx watch src/workers/outboxWorker.ts",
    "worker:prod": "node ./dist/src/workers/outboxWorker.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run worker:dev\"",
    "start": "node ./dist/src/index.js",
    "lint": "npx eslint ./src",
    "lint:fix": "npx eslint ./src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:prisma": "prettier --write \"prisma/**/*.prisma\"",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma migrate reset",
    "db:status": "npx prisma migrate status",
    "db:studio": "npx prisma studio",
    "db:pull": "npx prisma db pull",
    "db:push": "npx prisma db push"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^17.2.3",
    "ejs": "^4.0.1",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "express-session": "^1.18.2",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.0.0",
    "nodemailer": "^6.9.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.17.1",
    "redis": "^5.10.0",
    "stripe": "^20.2.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.9",
    "@types/nodemailer": "^7.0.5",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.16.0",
    "concurrently": "^8.0.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^7.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}

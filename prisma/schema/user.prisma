model User {
  id            String         @id @default(uuid())
  email         String         @unique
  password      String?
  name          String?
  isVerified    Boolean        @default(false)
  orders        Order[]
  authProviders AuthProvider[]
  role          Role           @default(USER)
  isDeleted      Boolean        @default(false)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([email])
  @@map("users")
}


